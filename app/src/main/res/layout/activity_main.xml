<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.android.quizapp.MainActivity"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:layout_editor_absoluteY="8dp"
    tools:layout_editor_absoluteX="8dp">
    <ImageView
        android:background="@drawable/android"
        android:layout_weight="7"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="0dp" />


    <TextView
        android:paddingTop="8dp"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textSize="22sp"
        android:text="Description:"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="0dp" />

    <TextView
        android:paddingTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:paddingBottom="8dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:text="Following quiz provides Multiple Choice Questions (MCQs) related to Android. You will have to read all the given answers and click over the correct answer. Press Start Quiz when you are ready."
        android:textAlignment="center"
        android:textSize="16sp" />

    <Button
        android:onClick="startActivity"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:text="Start Quiz"
        android:id="@+id/start_quiz"
        android:layout_width="wrap_content"
        android:layout_height="0dp" />




</LinearLayout>



